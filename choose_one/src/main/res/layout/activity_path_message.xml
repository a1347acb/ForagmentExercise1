<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PathMessage">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
        android:id="@+id/temperature"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/Items_Height"
        style = "@style/ItemFrameLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style = "@style/plateItem"
            android:text="温度"/>
        <TextView
            android:id="@+id/temperature_Value"
            android:layout_width="@dimen/Items_Values_Width"
            android:layout_height="@dimen/Items_Values_Height"
            android:layout_margin="20dp"
            android:layout_gravity="bottom|end"
            android:background="@drawable/item_background"
            android:gravity="center"/>
    </FrameLayout>
        <FrameLayout
            android:id="@+id/humidity"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/Items_Height"
            style = "@style/ItemFrameLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style = "@style/plateItem"
                android:text="湿度"/>
            <TextView
                android:id="@+id/humidity_Value"
                android:layout_width="@dimen/Items_Values_Width"
                android:layout_height="@dimen/Items_Values_Height"
                android:layout_margin="20dp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/item_background"
                android:gravity="center"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/illumination"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/Items_Height"
            style = "@style/ItemFrameLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style = "@style/plateItem"
                android:text="光照"/>
            <TextView
                android:id="@+id/illumination_Value"
                android:layout_width="@dimen/Items_Values_Width"
                android:layout_height="@dimen/Items_Values_Height"
                android:layout_margin="20dp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/item_background"
                android:gravity="center"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/CO2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/Items_Height"
            style = "@style/ItemFrameLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style = "@style/plateItem"
                android:text="CO2"/>
            <TextView
                android:id="@+id/CO2_Value"
                android:layout_width="@dimen/Items_Values_Width"
                android:layout_height="@dimen/Items_Values_Height"
                android:layout_margin="20dp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/item_background"
                android:gravity="center"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/PM2_5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/Items_Height"
            style = "@style/ItemFrameLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style = "@style/plateItem"
                android:text="PM2.5"/>
            <TextView
                android:id="@+id/PM2_5_Value"
                android:layout_width="@dimen/Items_Values_Width"
                android:layout_height="@dimen/Items_Values_Height"
                android:layout_margin="20dp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/item_background"
                android:gravity="center"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/path"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/Items_Height"
            style = "@style/ItemFrameLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style = "@style/plateItem"
                android:text="道路状态"/>
            <TextView
                android:id="@+id/path_Value"
                android:layout_width="@dimen/Items_Values_Width"
                android:layout_height="@dimen/Items_Values_Height"
                android:layout_margin="20dp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/item_background"
                android:gravity="center"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>